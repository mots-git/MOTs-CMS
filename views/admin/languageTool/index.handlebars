<h1>All Posts</h1>

<table class="table table-bordered">

    <thead>
        <tr>
            <th>Id</th>
            <th>Title</th>
            <th>Body</th>
        </tr>
    </thead>
    <tbody>
        {{#each languageTools}}
        <tr>
            <td>{{id}}</td>
            <td>{{title}}</td>
            <td>{{url}}</td>
            <td><a href="/admin/languageTool/edit/{{_id}}" class="btn btn-info">Edit</a></td>
            <td>

                <form action="/admin/languageTool/{{id}}?_method=DELETE" method="post">
                
                    <button type="submit" class="btn btn-danger">DELETE</button>

                </form>

            </td>
        </tr>
        {{/each}}
    </tbody>
</table>