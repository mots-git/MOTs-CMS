<h1>All Posts</h1>

<table class="table table-bordered">

    <thead>
        <tr>
            <th>Id</th>
            <th>Image</th>
            <th>Title</th>
            <th>Status</th>
            <th>Tool Category</th>
            <th>Allow Comments</th>
            <th>Date</th>
        </tr>
    </thead>
    <tbody>
        {{#each posts}}
        <tr>
            <td>{{id}}</td>
            <th><img height="100" class="img-responsive" src="/uploads/{{file}}" alt="{{file}}" /></th>
            <td>{{title}}</td>
            <td>{{status}}</td>
            <td>{{category.name}}</td>
            <td>{{allowComments}}</td>
            <td>{{generateDate date 'MMM Do YYYY'}}</td>
            <td><a href="/admin/posts/edit/{{_id}}" class="btn btn-info">Edit</a></td>
            <td>

                <form action="/admin/posts/{{id}}?_method=DELETE" method="post">
                
                    <button type="submit" class="btn btn-danger">DELETE</button>

                </form>

            </td>
        </tr>
        {{/each}}
    </tbody>
</table>